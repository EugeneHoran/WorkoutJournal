<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="anew.eugene.onerepmax.com.onerepmaxcalculator.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="setEntity"
            type="eh.workout.journal.com.workoutjournal.db.entinty.PlanSetEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/imageComplete"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/planTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:text="@{setEntity.name}"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageEdit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/colorGrayTransparent" />
    </LinearLayout>
</layout>