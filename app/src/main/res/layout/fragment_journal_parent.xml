<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="eh.workout.journal.com.workoutjournal.ui.journal.JournalParentFragment" />

        <variable
            name="navigation"
            type="Boolean" />
    </data>

    <android.support.design.widget.CoordinatorLayout style="@style/MatchParentMatchParent">

        <include
            android:id="@+id/viewToolbar"
            layout="@layout/view_toolbar"
            app:menuListener="@{fragment.menuItemClickListener}"
            app:navigation="@{navigation}"
            app:subTitle="@{fragment.toolbarSubTitle}"
            app:title="@{fragment.toolbarTitle}" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            style="@style/MatchParentMatchParent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            style="@style/Fab"
            android:onClickListener="@{fragment::onAddNewLiftClicked}"
            app:layout_anchor="@+id/bottom_sheet"
            app:layout_anchorGravity="top|end"
            app:srcCompat="@drawable/ic_add" />

        <LinearLayout
            android:id="@+id/bottom_sheet"
            style="@style/BottomSheet">

            <Space style="@style/MatchParent48" />

            <TextView
                android:id="@+id/txtPlanHeader"
                style="@style/TextHeader.Small"
                android:background="@color/white"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_list"
                android:drawableStart="@drawable/ic_list"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClickListener="@{fragment.onBottomSheetHeaderListener}"
                android:text="@string/today_s_plan"
                android:textColor="@color/black" />

            <View style="@style/Divider" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerPlan"
                style="@style/RecyclerChildVertical"
                android:background="@color/colorBackgroundSecondary"
                android:paddingBottom="12dp" />
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>