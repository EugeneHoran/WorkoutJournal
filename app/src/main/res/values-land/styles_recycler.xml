<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Recycler Views-->
    <style name="RecyclerNormalVertical" parent="@style/MatchParentMatchParent">
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="RecyclerNormalGrid" parent="@style/MatchParentMatchParent">
        <item name="android:clipToPadding">false</item>
        <item name="layoutManager">android.support.v7.widget.GridLayoutManager</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="RecyclerChildVertical" parent="@style/MatchParentWrapContent">
        <item name="layoutManager">android.support.v7.widget.LinearLayoutManager</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>