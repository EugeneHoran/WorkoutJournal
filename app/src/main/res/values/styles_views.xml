<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Layouts-->
    <style name="MatchParentMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContentWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParentWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent48">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="FrameLayoutWeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!--Fab-->
    <style name="Fab" parent="@style/WrapContentWrapContent">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="CardViewClickable" parent="@style/MatchParentWrapContent">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="BottomSheet" parent="@style/MatchParentWrapContent">
        <item name="android:background">@android:color/transparent</item>
        <item name="layout_behavior">android.support.design.widget.BottomSheetBehavior</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="elevation">2dp</item>
        <item name="android:focusable">true</item>
    </style>
</resources>